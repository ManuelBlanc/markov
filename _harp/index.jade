doctype html
html(lang='es' xmlns='http://www.w3.org/1999/xhtml')
	head
		title Cadenas de Markov

		//- Metadatos
		meta(charset='utf-8')
		meta(http-equiv='Content-type' content='text/html;charset=UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

		link(href='img/favicon.ico?v=1' rel='shortcut icon' type='image/x-icon')

		//- Scripts
		script(defer src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.9/d3.js')
		script(defer src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.js')
		script(defer src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.5.1/lodash.js')
		script(defer src='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.12.0/codemirror.js')
		script(defer src='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.12.0/mode/javascript/javascript.js')

		script(defer src='app.js')

		//- Estilos
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.css')
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.12.0/codemirror.css')
		link(rel='stylesheet' href='style.css')

	body
		.container
			.controls
				button#play
					span.fa.fa-play
				button#step
					span.fa.fa-step-forward
				button#reset
					span.fa.fa-undo
			svg
			textarea#graphJSON
				include ./markov.json
